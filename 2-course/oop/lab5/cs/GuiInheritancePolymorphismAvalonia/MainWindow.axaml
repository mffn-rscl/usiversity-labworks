<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="GuiInheritancePolymorphismAvalonia.MainWindow"
        Width="800" Height="600" Title="Inheritance and Polymorphism">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Content="Circle" Click="OnCircleClick" Margin="5"/>
            <Button Content="Square" Click="OnSquareClick" Margin="5"/>
            <Button Content="Rhomb" Click="OnRhombClick" Margin="5"/>
            <Button Content="Move Right" Click="OnMoveRightClick" Margin="5"/>
        </StackPanel>
        <Canvas x:Name="DrawingCanvas" Background="White"/>
    </DockPanel>
</Window>
